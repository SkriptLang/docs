---
import type { DocType } from './Docs.astro';

export interface Syntax {
    id: string;
    isNew: boolean;
    type: DocType;
    since: string;
    name: string;
    deprecated: boolean;
}

interface Props {
    syntax: Syntax;
}

const { syntax }: Props = Astro.props;
---

<a href={`#${syntax.id}`}
    data-new={syntax.isNew} data-type={syntax.type} data-since={syntax.since} 
    class="syntax"
    style={syntax.deprecated ? 'text-decoration: line-through; opacity: 0.5;' : ''}>
    {syntax.name}
</a>